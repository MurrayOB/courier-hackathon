<div class="lg:grid lg:grid-cols-2">
  <!-- column 1 -->
  <div class="mt-6 ml-6">
    <div class="py-4">
      <p>1. Enter your details and choose a language that you want to learn.</p>
    </div>

    <div id="my-form">
      <div class="">
        <div class="mb-1 mr-3">
          <label
            for="email"
            class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-600"
            >Email address</label
          >
          <input
            type="email"
            id="email-input"
            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500"
            placeholder="john.doe@company.com"
            required
          />
        </div>
        <br />
        <div class="mb-1 mr-3">
          <label
            for="languages"
            class="block mb-2 text-sm font-medium text-gray-900 dark:text-gray-600"
            >Select an option</label
          >
          <select
            required
            id="language-input"
            class="bg-gray-50 border border-gray-300 text-gray-900 text-sm rounded-lg focus:ring-blue-500 focus:border-blue-500 block w-full p-2.5 dark:border-gray-600 dark:placeholder-gray-400 dark:focus:ring-blue-500 dark:focus:border-blue-500"
          >
            <option selected>Choose a language</option>
            <% languages.forEach(function(language){ %>
            <option value="<%=language.code%>"><%= language.language%></option>
            <% }); %>
          </select>
        </div>
      </div>
      <button
        id="subscribe-btn"
        class="mr-4 mt-4 inline-flex items-center justify-center px-5 py-3 text-base font-medium text-white bg-indigo-500 border border-transparent rounded-md shadow hover:bg-indigo-700"
        data-primary="indigo-600"
        data-rounded="rounded-md"
        onclick="subscribe()"
      >
        Subscribe
      </button>
      <div class="lg:w-3/6 mr-4">
        <!-- loader -->
        <div role="status" id="loader" class="hidden">
          <svg
            aria-hidden="true"
            class="mr-2 w-8 h-8 text-gray-200 animate-spin dark:text-white-100 fill-blue-600"
            viewBox="0 0 100 101"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M100 50.5908C100 78.2051 77.6142 100.591 50 100.591C22.3858 100.591 0 78.2051 0 50.5908C0 22.9766 22.3858 0.59082 50 0.59082C77.6142 0.59082 100 22.9766 100 50.5908ZM9.08144 50.5908C9.08144 73.1895 27.4013 91.5094 50 91.5094C72.5987 91.5094 90.9186 73.1895 90.9186 50.5908C90.9186 27.9921 72.5987 9.67226 50 9.67226C27.4013 9.67226 9.08144 27.9921 9.08144 50.5908Z"
              fill="currentColor"
            />
            <path
              d="M93.9676 39.0409C96.393 38.4038 97.8624 35.9116 97.0079 33.5539C95.2932 28.8227 92.871 24.3692 89.8167 20.348C85.8452 15.1192 80.8826 10.7238 75.2124 7.41289C69.5422 4.10194 63.2754 1.94025 56.7698 1.05124C51.7666 0.367541 46.6976 0.446843 41.7345 1.27873C39.2613 1.69328 37.813 4.19778 38.4501 6.62326C39.0873 9.04874 41.5694 10.4717 44.0505 10.1071C47.8511 9.54855 51.7191 9.52689 55.5402 10.0491C60.8642 10.7766 65.9928 12.5457 70.6331 15.2552C75.2735 17.9648 79.3347 21.5619 82.5849 25.841C84.9175 28.9121 86.7997 32.2913 88.1811 35.8758C89.083 38.2158 91.5421 39.6781 93.9676 39.0409Z"
              fill="currentFill"
            />
          </svg>
          <span class="sr-only">Loading...</span>
        </div>
        <!-- success msg -->
        <div
          id="success-alert"
          class="flex p-4 mb-4 bg-green-100 rounded-lg dark:bg-green-200 mt-4 hidden"
          role="alert"
        >
          <div class="ml-3">
            <p
              id="success-msg"
              class="text-sm font-medium text-green-700 dark:text-green-800"
            ></p>
          </div>
        </div>
        <!-- error msg -->
        <div
          id="error-alert"
          class="flex p-4 mb-4 bg-red-100 rounded-lg dark:bg-red-200 mt-4 hidden"
          role="alert"
        >
          <div class="ml-3">
            <p
              id="error-msg"
              class="text-sm font-medium text-red-700 dark:text-red-800"
            ></p>
          </div>
        </div>
      </div>
    </div>
    <div class="ml-6 pb-6 mt-6 text-gray-500">
      <p>*Note - You can unsubscribe at any point.</p>
    </div>
  </div>
  <!-- column 2 -->
  <div class="">
    <img
      class="lg:pt-4"
      style="margin: 0 auto; text-align: center"
      src="images/email.png"
      alt=""
    />
  </div>
</div>
<br />
